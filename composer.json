{
    "name": "fredbradley/bradfordapi",
    "description": "A PHP Wrapper API for Bradford",
    "keywords": [
        "fredbradley",
        "bradfordapi"
    ],
    "homepage": "https://github.com/fredbradley/bradfordapi",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Fred Bradley",
            "email": "hello@fredbradley.co.uk",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "friendsofphp/php-cs-fixer": "^2.16",
        "vimeo/psalm": "^3.12"
    },
    "autoload": {
        "psr-4": {
            "FredBradley\\BradfordApi\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FredBradley\\BradfordApi\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "psalm": "vendor/bin/psalm --show-info=true",
        "format": "vendor/bin/php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true
    }
}
